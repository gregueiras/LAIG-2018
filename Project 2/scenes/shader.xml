    <transformation id="tf3">
      <translate x="3" y="6.1" z="-2" />
      <rotate axis="x" angle="0" />
      <scale x="0.5" y="0.5" z="0.5" />
    </transformation>
    <transformation id="tf4">
      <translate x="3.6" y="-2" z="0" />
      <rotate axis="x" angle="90" />
      <scale x="1" y="1" z="1" />
    </transformation>
    <transformation id="tf5">
      <scale x="1.2" y="1.2" z="1" />
    </transformation>
    <transformation id="tf6">
      <translate x="0" y="0" z="0.08" />
      <scale x="1.5" y="1.5" z="1" />
    </transformation>
  </transformations>

  <animations>

    <linear id="la1" span="5">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="5" yy="0" zz="0"/>
      <controlpoint xx="5" yy="0" zz="5"/>
    </linear>
    <linear id="la2" span="5">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="0" yy="0" zz="-5"/>
      <controlpoint xx="-5" yy="0" zz="-5"/>
    </linear>
    <linear id="la3" span="1">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="1" yy="0" zz="0"/>
    </linear>
    <linear id="lift" span="5">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="0" yy="3" zz="0"/>
    </linear>

    <circular id="ca1" span="10" center="0 0 0" radius="10" startang="0" rotang="720" />
  </animations>

  <primitives>

    <primitive id="terr">
      <terrain idtexture="text_text" idheightmap="map" parts="100" heightscale="0.14" />
    </primitive>
    <primitive id="wat">
      <water idtexture="text_water" idwavemap="wave_map" parts="10" heightscale="0.04" texscale="0.9" />
    </primitive>
    <primitive id="ship">
      <vehicle />
    </primitive>

  </primitives>

  <components>
    <component id="test">
      <transformation>
      </transformation>
      <animations>
      </animations>
      <materials>
        <material id="default" />
      </materials>
      <texture id="none" length_s="1" length_t="1" />
      <children>
        <componentref id="ship" />
        <componentref id="island" />
      </children>
    </component>

    <component id="ship">
      <transformation>
          <transformationref id="tf3" />
      </transformation>
      <animations>
        <animationref id="la1" />
        <animationref id="la2" />
        <animationref id="lift" />
        <animationref id="la1" />
        <animationref id="la2" />
        <!--<animationref id="lift" />
        <animationref id="ca1" />
        <animationref id="la1" />
        -->
      </animations>
      <materials>
        <material id="default" />
      </materials>
      <texture id="none" length_s="1" length_t="1" />
      <children>
        <primitiveref id="ship" />
      </children>
    </component>

    <component id="island">
      <transformation>
        <transformationref id="tf1"/>
      </transformation>
      <animations>
      </animations>
      <materials>
        <material id="default" />
      </materials>
      <texture id="none" length_s="1" length_t="1" />
      <children>
        <componentref id="terrain"/>
        <componentref id="water"/>
      </children>
    </component>

    <component id="terrain">
      <transformation>
        <transformationref id="tf5"/>
      </transformation>
      <animations>
      </animations>
      <materials>
        <material id="default" />
      </materials>
      <texture id="none" length_s="1" length_t="1" />
      <children>
        <primitiveref id="terr" />
        
      </children>
    </component>

    <component id="water">
      <transformation>
        <transformationref id="tf6"/>
      </transformation>
      <animations>
